{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:makefileVersions",
    ":disableDependencyDashboard",
    ":disableRateLimiting"
  ],
  "branchPrefix": "renovate-",
  "branchNameStrict": true,
  "rebaseWhen": "never",
  "keepUpdatedLabel": "auto-update",
  "packageRules": [
    {
      "matchPaths": [
        "tools/**",
        "docs/**"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
