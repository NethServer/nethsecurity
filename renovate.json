{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:makefileVersions",
    ":disableDependencyDashboard",
    ":disableRateLimiting"
  ],
  "packageRules": [
    {
      "matchPaths": [
        "tools/**"
      ],
      "groupName": "tools"
    },
    {
      "matchPaths": [
        "docs/**"
      ],
      "groupName": "docs"
    }
  ]
}
