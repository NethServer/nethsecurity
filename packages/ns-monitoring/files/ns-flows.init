USE_PROCD=1
START=99

start_service() {
    procd_open_instance
    procd_set_param command "/usr/sbin/ns-flows"
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

reload_service()
{
    stop
    start
}
