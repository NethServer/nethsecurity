START=80

USE_PROCD=1

start_service() {
    procd_open_instance
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param command '/usr/sbin/ns-plug'
    procd_set_param respawn 3600 60 0
    procd_close_instance
}

service_triggers()
{
    procd_add_reload_trigger "ns-plug"
}
