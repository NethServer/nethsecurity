START=99
USE_PROCD=1

start_service()
{
  procd_open_instance
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param command '/usr/libexec/storage-alarm'
	procd_close_instance
}

reload_service()
{
  start
}

service_triggers()
{
  procd_add_reload_trigger fstab ns-plug
  procd_add_reload_mount_trigger /mnt/data
}
