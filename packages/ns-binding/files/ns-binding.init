USE_PROCD=1

start_service() {
    # Main service
    procd_open_instance
    procd_set_param command /usr/sbin/ns-binding
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop_service() {
    # Destroy nft table
    /usr/sbin/nft delete table inet ns-binding &> /dev/null
}

service_triggers()
{
    procd_add_reload_trigger dhcp
}
