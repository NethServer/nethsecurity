#
# DPI License Renewal: Add cron job if missing
#

if ! grep -q '/etc/init.d/dpi-license-update' /etc/crontabs/root; then
    echo '0 0 * * * sleep $(( RANDOM % 300 )); /etc/init.d/dpi-license-update start' >> /etc/crontabs/root
fi