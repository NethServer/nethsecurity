USE_PROCD=1
START=50

start_service() {
    procd_open_instance
    procd_set_param command "/usr/sbin/dpi-license-update"
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param respawn 3600 10 0
    procd_close_instance
}

reload_service()
{
    stop
    start
}

service_triggers() {
    procd_add_reload_trigger "fstab" "dpi"
}
